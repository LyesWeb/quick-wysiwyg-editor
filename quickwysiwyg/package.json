{
  "name": "quickwysiwyg",
  "version": "1.0.0",
  "description": "A fast, lightweight, and customizable WYSIWYG editor for React",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external react --external react-dom",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external react --external react-dom --watch"
  },
  "keywords": [
    "wysiwyg",
    "editor",
    "react",
    "contenteditable",
    "rich-text",
    "typescript",
    "lightweight"
  ],
  "author": "LyesWeb",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LyesWeb/quick-wysiwyg-editor.git"
  },
  "homepage": "https://github.com/LyesWeb/quick-wysiwyg-editor#readme",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tsup": "^8.0.2",
    "typescript": "^5.2.2"
  }
}

